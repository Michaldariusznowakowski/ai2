{% extends 'base.html.twig' %}

{% block title %}Measurement{% endblock %}

{% block body %}
    <div class="container mt-4">
    <h1 class="display-4">Measurement</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ measurement.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ measurement.date ? measurement.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Calsius</th>
                <td>{{ measurement.calsius }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_measurement_index') }}">back to list</a>

    <a class="btn btn-warning" href="{{ path('app_measurement_edit', {'id': measurement.id}) }}">edit</a>

    {{ include('measurement/_delete_form.html.twig') }}
        </div>
{% endblock %}
