{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="display-4">Location</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ location.id }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ location.city }}</td>
                </tr>
                <tr>
                    <th>Country</th>
                    <td>{{ location.country }}</td>
                </tr>
                <tr>
                    <th>Latitude</th>
                    <td>{{ location.latitude }}</td>
                </tr>
                <tr>
                    <th>Longitude</th>
                    <td>{{ location.logitude }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-secondary" href="{{ path('app_location_index') }}">Back to List</a>
        {% if is_granted('ROLE_LOCATION_EDIT') %}
            <a btn btn-warninghref="{{ path('app_location_edit', {'id': location.id}) }}">Edit</a>
            {% endif %}
        {% if is_granted('ROLE_LOCATION_DELETE') %}
            {{ include('location/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
